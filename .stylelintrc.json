{
  "extends": "stylelint-config-recommended",

  "rules": {
    "at-rule-no-unknown": [true, {
      "ignoreAtRules": [
        "extends",
        "at-root",
        "define-mixin",
        "/^my-/i",
        "content",
        "debug",
        "each",
        "else",
        "else if",
        "error",
        "extend",
        "for",
        "function",
        "if",
        "import",
        "include",
        "media",
        "mixin",
        "return",
        "warn",
        "while"
      ]
    }],
    "color-no-invalid-hex": true,
    "max-empty-lines": 2,
    "rule-empty-line-before": ["always", {
      "except": ["first-nested"],
      "ignore": ["after-comment"]
    }],
    "block-no-empty": null,
    "unit-whitelist": ["em", "rem", "s", "%", "px", "vh", "vw"]
  },
  "ignoreFiles": [
    "app/bootstrap/**/*.css"
  ]
}